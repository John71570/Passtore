      </ul>
      <span class="navbar-text p-lg-0 pt-sm-2 text-warning">
        <%= user.user_login %>
      </span>
    </div>
  </nav>

  <div class="row m-auto">
    <h3 class="m-auto text-center p-3 text-capitalize font-weight-light">My settings</h3>
  </div>

  <div class="row m-auto pr-3 pl-3 pb-3" style="max-width: 1500px">

    <div class="m-auto col-12">

      <h5 class="text-center font-weight-light pb-3">Update your settings</h5>
      <form class="submit" method="post">
        <div class="d-none errorMessage pb-3 text-center" style="color: #FF0000;"></div>
        <div class="form-group">
          <div class="form-label-group">
            <input type="password" id="password" name="user_password" class="form-control" placeholder="Password" required="required" autofocus="autofocus">
            <label for="password">New Password</label>
          </div>
        </div>
        <div class="form-group">
          <div class="form-label-group">
            <input type="password" id="passwordB" name="user_passwordB" class="form-control" placeholder="Confirm password" required="required" autofocus="autofocus">
            <label for="passwordB">Confirm new Password</label>
          </div>
        </div>
        <div class="form-group">
          <div class="form-label-group">
            <input type="email" id="email" name="user_email" class="form-control" placeholder="Confirm decrypt key" autofocus="autofocus">
            <label for="email">New Email</label>
          </div>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary btn-block">Valid changes</button>
          <button type="button" class="btn btn-danger btn-block showdecrypt">Show decrypt key</button>
        </div>
      </form>

    </div>

  </div>

  <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Passtore > Update</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Informations have been updated
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal" href="/login">Close</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="modalkey" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Passtore > Decrypt Key</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body" id="publickeyvalue">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal" href="/login">Close</button>
        </div>
      </div>
    </div>
  </div>

  </body>

</html>
